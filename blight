#!/bin/sh

# Defaults
# Day: 6500K Night: 4500K

day=6500
night=3500
step=100
val=$(cat ~/.cache/lum)

rshift() {
    redshift -P -O "$1" > /dev/null 2>&1 || exit 1
    echo "$1" > ~/.cache/lum
}

on_login() {
    now=$(date +%H)
    if [ "$now" -gt 07 ] && [ "$now" -lt 17 ]; then
        rshift $day
    else
        [ "$val" -gt "$night" ] && rshift $night
    fi
}

case "$1" in
    u) rshift $((val + step));;

    d) rshift $((val - step));;

    D) rshift $day;;

    N) rshift $night;;

    a) on_login;;
esac
